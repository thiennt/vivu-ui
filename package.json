{
  "name": "vivu-ui",
  "version": "1.0.0",
  "description": "A whimsical fantasy turn-based card game UI built with PixiJS",
  "scripts": {
    "prestart": "run-s assets",
    "start": "vite --open",
    "assets": "assetpack",
    "prebuild": "run-s clean format:check lint assets types",
    "build": "vite build",
    "types": "tsc",
    "prepreview": "run-s build",
    "preview": "vite preview --open",
    "clean": "rimraf public/assets/* dist/* .assetpack/*",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "game",
    "pixijs",
    "typescript",
    "fantasy",
    "card-game"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@assetpack/core": "^1.5.3",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  },
  "dependencies": {
    "@pixi/devtools": "^2.0.1",
    "gsap": "^3.13.0",
    "pixi.js": "^8.13.1"
  }
}
